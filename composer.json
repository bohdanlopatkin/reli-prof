{
  "name": "reliforp/reli-prof",
  "description": "A sampling profiler for PHP written in PHP, which reads information about running PHP VM from outside of the process.",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "php",
    "profiler",
    "ffi"
  ],
  "authors": [
    {
      "name": "sji",
      "homepage": "https://twitter.com/sji_ch"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.1",
    "ext-ffi": "*",
    "ext-filter": "*",
    "ext-json": "*",
    "ext-pcntl": "*",
    "symfony/console": "6.3.4",
    "php-di/php-di": "7.0.5",
    "amphp/parallel": "2.2.2",
    "amphp/amp": "3.0.0",
    "hassankhan/config": "3.1.0",
    "sj-i/php-cast": "1.0.0",
    "monolog/monolog": "3.4.0",
    "webmozart/assert": "1.11.0"
  },
  "require-dev": {
    "ext-posix": "*",
    "phpunit/phpunit": "10.3.2",
    "squizlabs/php_codesniffer": "3.7.2",
    "mockery/mockery": "1.6.6",
    "jetbrains/phpstorm-stubs": "2023.2",
    "php-coveralls/php-coveralls": "2.6.0",
    "psalm/phar": "^5.11"
  },
  "autoload": {
    "files": ["src/Lib/Defer/defer.php"],
    "psr-4": {
      "Reli\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Reli\\": "tests"
    }
  },
  "bin": [
    "reli"
  ],
  "scripts": {
    "test": [
      "phpunit"
    ],
    "psalm": [
      "psalm.phar"
    ],
    "phpcs": [
      "phpcs --standard=./phpcs.xml ./src ./tests"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  }
}
